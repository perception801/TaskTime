<div class="container">
<div class="row">
  <div class="col-md-12">
    <h2 class="text-center">Hello! <%= current_user.name || current_user.email %></h2>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <h3 class="text-center">Your Lists:</h3>
    <ul class="nav nav-pills nav-stacked">
      <% @lists.each do |list| %>
        <li><%=link_to list.name , user_list_path(current_user, list), class: 'btn btn-default btn-lg btn-block' %></li>
      <% end %>
    </ul>
    <br>
    <%= link_to "New List", new_user_list_path(current_user), class: 'btn btn-primary btn-lg btn-block'%>
    <br>
  </div>
  <div class="col-md-3">
  </div>
</div>
</div>